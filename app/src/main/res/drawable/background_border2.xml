<!-- background_border.xml -->

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="2dp"
            android:color="@color/primary_color_state" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Background with Primary Color State -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#66000000" /><corners android:radius="20dp" />
        </shape>
    </item>
</layer-list>
